<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inputActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_700"
        android:text="Fill to enter the Total Input price"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/animalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PIGS INPUT PRICE: "
        android:gravity="center"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/inputPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the total Monthly input Cost"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/inputItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Monthly input Items"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/SubmitBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Submit" />

  </LinearLayout>